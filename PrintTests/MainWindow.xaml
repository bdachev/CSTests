<Window x:Class="PrintTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel Margin="3">
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="Print..." Click="Print_Click" Margin="3" Padding="6,3"/>
            <Button Content="Page Size..." Click="PageSize_Click" Margin="3" Padding="6,3" />
            <Button Content="Preview..." Click="Preview_Click" Margin="3" Padding="6,3" />
        </StackPanel>
        <FlowDocumentScrollViewer  x:Name="__flowDocViewer" Margin="3" BorderBrush="Gray" BorderThickness="1" SnapsToDevicePixels="True">
            <FlowDocument>
                <Paragraph>
                    <Figure Width="1in" HorizontalAnchor="ContentRight" Padding="0">
                        <BlockUIContainer>
                            <Image Stretch="Uniform" Source="/Images/Logo.png" Width="1in" />
                        </BlockUIContainer>
                    </Figure>
                    <Run>Text</Run>
                </Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </DockPanel>
</Window>
